<!-- app/views/sessions/new.html.erb -->
<div class="container mt-5 pt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header bg-primary text-white text-center py-3">
          <h3>Connexion</h3>
        </div>
        <div class="card-body p-4">
          <% if flash[:alert] %>
            <div class="alert alert-danger"><%= flash[:alert] %></div>
          <% end %>
          
          <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
            <div class="mb-3">
              <%= f.label :email, "Adresse e-mail", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", placeholder: "Entrez votre e-mail", required: true %>
            </div>
            
            <div class="mb-3">
              <%= f.label :password, "Mot de passe", class: "form-label" %>
              <%= f.password_field :password, class: "form-control", placeholder: "Entrez votre mot de passe", required: true %>
            </div>
            
            <div class="d-grid gap-2">
              <%= f.submit "Se connecter", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
          
          <div class="text-center mt-4">
            <p>Vous n'avez pas de compte ? <%= link_to "S'inscrire", new_utilisateur_path %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>