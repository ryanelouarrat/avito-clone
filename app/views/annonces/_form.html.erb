    .image-upload-container {
      margin-top: 15px;
      margin-bottom: 20px;
    }
    
    .image-preview-container {
      display: flex;
      flex-wrap: wrap;
      gap: 12px;
      margin-top: 12px;
    }
    
    .image-preview {
      position: relative;
      width: 110px;
      height: 110px;
      border: 1px solid #ddd;
      border-radius: 8px;
      overflow: hidden;
    }
    
    .image-preview img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
