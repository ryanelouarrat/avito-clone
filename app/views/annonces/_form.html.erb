<%= form_with model: annonce, local: true do |form| %>
    <% if annonce.errors.any? %>
      <div class="alert alert-danger">
        <h4>Erreurs:</h4>
        <ul>
          <% annonce.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="mb-3">
      <%= form.label :titre, class: "form-label" %>
      <%= form.text_field :titre, class: "form-control" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :prix, class: "form-label" %>
      <%= form.number_field :prix, class: "form-control" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :localisation, class: "form-label" %>
      <%= form.text_field :localisation, class: "form-control" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :date_publication, class: "form-label" %>
      <%= form.date_field :date_publication, class: "form-control" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :image, class: "form-label" %>
      <%= form.text_field :image, placeholder: "URL de l'image", class: "form-control" %>
    </div>
  
    <%= form.submit class: "btn btn-primary" %>
  <% end %>
  