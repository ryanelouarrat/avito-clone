<div id="avito-page" dir="ltr" translate="no" class="notranslate">
  <%# Optional: add a header replicating Avito's UI here %>
  <h1 class="mb-4">Toutes les Annonces</h1>

  <%= link_to 'CrÃ©er une annonce', new_annonce_path, class: "btn btn-success mb-4" %>

  <% @annonces.each do |annonce| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= annonce.titre %></h5>
        <p class="card-text"><%= annonce.description.truncate(100) %></p>
        <p><strong>Prix:</strong> <%= annonce.prix %> MAD</p>
        <p><strong>Localisation:</strong> <%= annonce.localisation %></p>
        <%= link_to 'Voir', annonce_path(annonce), class: "btn btn-primary btn-sm" %>
        <%= link_to 'Modifier', edit_annonce_path(annonce), class: "btn btn-warning btn-sm" %>
        <%= button_to 'Supprimer', annonce_path(annonce),
              method: :delete,
              data: { turbo_confirm: 'Supprimer cette annonce ?' },
              class: "btn btn-danger btn-sm",
              form: { class: "d-inline" } %>
      </div>
    </div>
  <% end %>
</div>
